$nav-link
  float: left
  color: color-nav-foreground
  text-decoration: none
  text-shadow: 0 1px rgba(0, 0, 0, 0.2)
  display: block
  padding: 20px 15px
  transition: 0.2s ease-in
  &:hover
    color: #fff
    background: color-nav-hover-background

.nav-container
  clearfix()
  padding: 0 15px
  background: color-nav-background
  z-index: 1
  box-shadow: inset 0 1px 0 rgba(255,255,255,0.05),
              0 -1px 0 rgba(0,0,0,0.2),
              inset 1px 0 0 rgba(0,0,0,0.2),
              inset -1px 0 0 rgba(0,0,0,0.2)
  .nav-icon
    @extend $nav-link
    line-height: 20px
    padding: 15px 14px
    font-family: font-icon
    text-align: center
    font-size: font-size
    position: relative
    cursor: pointer
  #main-nav-toggle
    display: none
    width: 100%
    text-align: right
    box-sizing: border-box
    border-bottom: 1px solid rgba(255,255,255,0.06)
    &:before
      content: "\f0c9"
  .nav-container-inner
    clearfix()
    #main-nav
      float: left
      .main-nav-list
        float: left
      .main-nav-list-item
        position: relative
        text-transform: uppercase;
        float: left
        &.top-level-menu
          & > a:after
            content: "\f0d7" !important
            float: none
            margin-left: 6px
            font-size: 14px
            line-height: 1.2em
            opacity: 0.5
            font-family: FontAwesome
            display: inline-block
          &:hover
            & > a
              color: #fff
              background: rgba(0,0,0,0.1)
        .main-nav-list-link
          @extend $nav-link
          line-height: 20px
          padding: 15px 14px
          font-size: 16px
          &.current
            color: #fff
        .main-nav-list-child
          top: 100%
          display: none
          padding: 10px 0
          overflow: hidden
          position: absolute
          width: main-nav-child-width
          background: color-nav-background url(images/opacity-10.png) repeat
          li
            box-shadow: 0 1px 0 rgba(255,255,255,0.06)
            &:last-child
              box-shadow: none
          li, li a
            width: 100%
            display: block
            box-sizing: border-box
    #sub-nav
      float: right

#search
  margin-top: 5px

.search-trigger
  cursor: pointer

.search-form
  padding: 14px 15px 16px
  height: 50px
  overflow: hidden
  box-sizing: border-box
  display: flex
  align-items: center

.search-form-icon
  color: color-nav-foreground
  font-family: FontAwesome
  font-size: 16px
  margin-right: 8px
  &:before
    content: "\f002"

.search-form-input
  -webkit-appearance: none
  width: 100px
  border: none
  outline: none
  background: none
  line-height: line-height
  transition: width 0.2s ease-in
  font: 16px font-sans
  color: color-nav-foreground
  cursor: pointer
  &::placeholder
    color: rgba(255, 255, 255, 0.5)
  &::-webkit-search-cancel-button
    -webkit-appearance: none

.search-overlay
  display: none
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100%
  background: rgba(0, 0, 0, 0.7)
  z-index: 9999
  backdrop-filter: blur(4px)
  &.active
    display: flex
    align-items: flex-start
    justify-content: center
    padding-top: 10vh

.search-overlay-inner
  background: #fff
  border-radius: 8px
  width: 90%
  max-width: 640px
  max-height: 75vh
  display: flex
  flex-direction: column
  box-shadow: 0 16px 70px rgba(0, 0, 0, 0.4)
  overflow: hidden

.search-overlay-header
  display: flex
  align-items: center
  border-bottom: 1px solid color-border
  padding: 0 20px

.search-overlay-input
  flex: 1
  border: none
  outline: none
  font-size: 18px
  padding: 16px 0
  font-family: font-sans
  color: color-default
  background: transparent
  &::placeholder
    color: color-grey

.search-overlay-close
  background: none
  border: none
  font-size: 28px
  color: color-grey
  cursor: pointer
  padding: 0 0 0 12px
  line-height: 1
  &:hover
    color: color-default

.search-overlay-hint
  padding: 8px 20px
  font-size: 12px
  color: color-grey
  border-bottom: 1px solid color-border-light
  kbd
    display: inline-block
    background: #f0f0f0
    border: 1px solid #ddd
    border-radius: 3px
    padding: 1px 6px
    font-size: 11px
    font-family: font-mono
    color: #555
    line-height: 1.4

.search-overlay-results
  overflow-y: auto
  padding: 0

.search-result-list
  list-style: none
  margin: 0
  padding: 0

.search-result-item
  border-bottom: 1px solid color-border-light
  &:last-child
    border-bottom: none

.search-result-link
  display: block
  padding: 14px 20px
  text-decoration: none
  color: color-default
  transition: background 0.15s ease
  &:hover
    background: #f8f8f8

.search-result-title
  display: block
  font-size: 16px
  font-weight: 600
  color: #333
  margin-bottom: 4px

.search-result-cat
  display: inline-block
  font-size: 12px
  color: color-link
  margin-bottom: 4px

.search-result-snippet
  font-size: 13px
  color: #777
  line-height: 1.5
  margin: 0

.search-keyword
  background: rgba(66, 185, 131, 0.15)
  color: color-link
  padding: 1px 2px
  border-radius: 2px

.search-empty
  text-align: center
  padding: 40px 20px
  color: color-grey
  font-size: 14px

.search-more
  text-align: center
  padding: 12px
  color: color-grey
  font-size: 13px
  border-top: 1px solid color-border-light
